                    p оформлення замовлення
            .flex-between.wrapper.order.align
                div
                    .data
                        h2 Ваш  дані
                        .flex-between
                            div 
                                label(for="") Імʼя*
                                input(type="text" placeholder="Імʼя")
                            div 
                                label(for="") Прізвище*
                                input(type="text" placeholder="Прізвище")
                        .flex-between
                            div 
                                label(for="") Телефон*
                                input(type="text" placeholder="+380") 
                            div 
                                label(for="") E-mail
                                input(type="text" placeholder="E-mail")
                    .flex-between.align.delivery
                        div
                            h2 Спосіб доставки
                            div 
                                input(type="checbox" class="checbox")
                                label(for="" class="checboxLabel") Нова Пошта
                            div 
                                input(type="checbox" class="checbox")
                                label(for="" class="checboxLabel") Укрпошта
                            div 
                                input(type="checbox" class="checbox")
                                label(for="" class="checboxLabel") Meestexpres
